# Переменные окружения для локальной разработки
# Скопируйте содержимое в файл .env

NODE_ENV=development
PORT=3000
JWT_SECRET=telegram-messenger-super-secret-key-2024-ultra-secure

# База данных SQLite
DB_PATH=backend/database/messenger-dev.db
DB_TIMEOUT=30000

# Настройки безопасности
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
HELMET_ENABLED=true
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Настройки загрузки файлов
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads/
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4,audio/mpeg

# Настройки WebSocket
SOCKET_PING_TIMEOUT=60000
SOCKET_PING_INTERVAL=25000

# Настройки логирования
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# Настройки сессий
SESSION_SECRET=telegram-messenger-session-secret-2024
SESSION_MAX_AGE=86400000
