# Переменные окружения для Render.com
# Скопируйте эти значения в Render Dashboard

NODE_ENV=production
PORT=10000
JWT_SECRET=автоматически-генерируется-render

# База данных SQLite
DB_PATH=backend/database/messenger.db
DB_TIMEOUT=30000

# Настройки безопасности
CORS_ORIGIN=*
HELMET_ENABLED=true
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Настройки загрузки файлов
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads/
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4,audio/mpeg

# Настройки WebSocket
SOCKET_PING_TIMEOUT=60000
SOCKET_PING_INTERVAL=25000

# Настройки логирования
LOG_LEVEL=error
LOG_FILE=logs/app.log

# Настройки сессий
SESSION_SECRET=автоматически-генерируется-render
SESSION_MAX_AGE=86400000
